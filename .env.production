# PRODUCTION ENVIRONMENT VARIABLES

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/slimmom_production?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars_production
REFRESH_SECRET=your_super_secure_refresh_secret_min_32_chars_production

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-app-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@slimmom.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=604800000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_LIMIT_MAX=5

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# CORS Origins (production domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://slimmom.netlify.app